
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} %-5p %m%n</pattern>
        </encoder>
    </appender>

    <!-- ch.qos.logback.core.rolling.RollingFileAppender -->

    <appender name="DEBUG_LOG" class="ch.qos.logback.core.FileAppender">
        <file>../logs/ApplicationTest.log</file>
        <encoder>
            <pattern>%d{ISO8601} %-5p %m%n</pattern>
        </encoder>
    </appender>

    <appender name="ERROR_LOG" class="ch.qos.logback.core.FileAppender">
        <file>../logs/ApplicationTestError.log</file>
        <encoder>
            <pattern>%d{ISO8601} %-5p %m%n</pattern>
        </encoder>
    </appender>


    <root level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="DEBUG_LOG" />
        <appender-ref ref="ERROR_LOG" />
    </root>
</configuration>